<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Question"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_below="@+id/tvQ1.1">

                <RadioButton
                    android:id="@+id/rbtnValue5"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:text="Stimme voll zu"
                    android:textSize="18sp"
                    android:layout_weight="20"/>

                <RadioButton
                    android:id="@+id/rbtnValue4"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:text=" "
                    android:textSize="18sp"
                    android:layout_weight="20"/>

                <RadioButton
                    android:id="@+id/rbtnValue3"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_weight="20"/>

                <RadioButton
                    android:id="@+id/rbtnValue2"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="18sp"
                    android:layout_weight="20"/>

                <RadioButton
                    android:id="@+id/rbtnValue1"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:text="Stimme gar nicht zu"
                    android:textSize="18sp"
                    android:layout_weight="20"/>


            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>