<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvQ1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvQ1.1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtnQ1.1-1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="Stimme voll zu"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rbtnQ1.1-2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="Stimme zu "
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rbtnQ1.1-3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="Neutral"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rbtnQ1.1-4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="Stimme nicht zu"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rbtnQ1.1-5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="Stimme gar nicht zu"
                    android:textSize="18sp" />


            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>