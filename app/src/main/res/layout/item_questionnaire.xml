<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Question"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvQ1.1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtnValue5"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="Stimme voll zu"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rbtnValue4"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text=" "
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rbtnValue3"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text=""
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rbtnValue2"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text=""
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rbtnValue1"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="Stimme gar nicht zu"
                    android:textSize="18sp" />


            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>