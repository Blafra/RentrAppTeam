                    android:id="@+id/tvResultTotally"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:padding="2dip"
                    android:text=""
                    android:textSize="18sp" />


                <TextView
